@inherits ComponentBase
@using SpeedtestRunner.Data.Models
@inject SpeedtestRunner.Services.SpeedtestRunnerService SpeedtestRunner

<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Speedtest Runner</a>
    <div class="row mt-2 mb-1">
        <div class="col-sm-12">
            @if (_running)
            {
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            }
            else
            {
                <button class="btn btn-primary" @onclick="RunSpeedtest">Run Now</button>
            }
        </div>
    </div>
</nav>

@functions {

    [Parameter]
    public EventCallback<Speedtest> OnTestRun { get; set; }

    private bool _running = false;

    private async Task RunSpeedtest(MouseEventArgs e)
    {
        _running = true;
        var test = await SpeedtestRunner.RunSpeedtest();
        _running = false;
        await OnTestRun.InvokeAsync(test);
    }

}
